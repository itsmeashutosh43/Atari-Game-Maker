{
  "name": "breakout-game",
  "version": "1.0.0",
  "description": "Simple breakout game made using typescript",
  "main": "./dist/main.js",
  "scripts": {
    "build": "webpack",
    "build:cp-public": "cp ./public/** ./dist",
    "type": "tsc --noEmit",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'src/tests/**/*.ts'"
  },
  "keywords": [
    "Breakout",
    "game"
  ],
  "exclude": [
    "./tests/",
    "./node_modules/",
    "./dist/"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "eslint": "^8.23.0",
    "eslint-plugin-react": "^7.31.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "chai": "^4.3.6",
    "mocha": "^10.0.0",
    "mocha-istanbul": "^0.3.0",
    "resolve-cwd": "^3.0.0",
    "ts-node": "^10.9.1",
    "write-json-file": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{html,css,less,ejs}": [
      "prettier --write",
      "git add"
    ]
  }
}
